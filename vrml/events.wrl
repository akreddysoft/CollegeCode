PROTO ickleCone [
   field SFVec3f position 0 0 0 
]
{
   Transform {
      translation IS position
      children [
         Shape {
            appearance Appearance {
               material Material {
                   diffuseColor 1,0,0 
               }
            }
            geometry Cone {
               bottomRadius 0.3
               height 1
               bottom FALSE
            }
         }
      ]
   }
}

