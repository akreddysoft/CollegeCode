Shape {
   appearance Appearance {
      material Material {
         diffuseColor 0 0.5 0
         emissiveColor 0 0.8 0
         transparency 0.5
      }
   }
   geometry Cylinder {
      radius 0.35
      height 3
      bottom FALSE
   }
}

Transform {
   translation 0 -2 0
   children [
      Shape {
         appearance Appearance {
            texture ImageTexture {
               url "brick.jpg"
               repeatS TRUE
               repeatT TRUE
            }
         }
         geometry Box {
            size 4 1 4
         }
      }
   ]
}

